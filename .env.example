# FPL ML System Environment Configuration
# Copy this file to .env and configure with your values

# =============================================================================
# FPL API Configuration  
# =============================================================================
FPL_TEAM_ID=12345
FPL_EMAIL=your_email@example.com
FPL_PASSWORD=your_fpl_password

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/fpl_db
# For SQLite (development): sqlite:///data/fpl.db

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
# Leave empty to use in-memory cache only

# =============================================================================
# AI Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
# Required for Pydantic AI agents

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_STRUCTURED=true
LOG_DIR=logs

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# ML Model Configuration
# =============================================================================
MODEL_PATH=models
RETRAIN_THRESHOLD_MSE=0.005
MIN_TRAINING_SAMPLES=100

# =============================================================================
# Optimization Configuration
# =============================================================================
OPTIMIZATION_TIMEOUT_SECONDS=10
MIN_TRANSFER_GAIN_THRESHOLD=1.0
RISK_TOLERANCE=balanced

# =============================================================================
# API Rate Limiting
# =============================================================================
FPL_API_RATE_LIMIT=60
FPL_API_RATE_WINDOW=60

# =============================================================================
# Dashboard Configuration
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
DASHBOARD_TITLE="FPL ML System"

# =============================================================================
# Monitoring Configuration
# =============================================================================
ENABLE_MONITORING=true
METRICS_COLLECTION_INTERVAL=60
PROMETHEUS_PORT=8000

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Development Configuration
# =============================================================================
WARM_CACHE=false
ENABLE_DEBUG_TOOLBAR=false
MOCK_FPL_API=false

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_POSTGRES_USER=fpl_user
DOCKER_POSTGRES_PASSWORD=fpl_password
DOCKER_POSTGRES_DB=fpl_db

# =============================================================================
# External Service Configuration
# =============================================================================
SENTRY_DSN=
WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_WORKERS=4
ASYNC_POOL_SIZE=10
CONNECTION_POOL_SIZE=20

# =============================================================================
# Data Configuration
# =============================================================================
DATA_RETENTION_DAYS=365
BACKUP_SCHEDULE="0 2 * * *"
AUTO_UPDATE_DATA=true
UPDATE_FREQUENCY_MINUTES=30